<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/imageLeft"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bama"
            tools:layout_conversion_absoluteHeight="359dp"
            tools:layout_conversion_absoluteWidth="198dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/imageCenter"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pic1"
            tools:layout_conversion_absoluteHeight="359dp"
            tools:layout_conversion_absoluteWidth="198dp"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/imageRight"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/baseball"
            tools:layout_conversion_absoluteHeight="359dp"
            tools:layout_conversion_absoluteWidth="197dp"
            tools:layout_editor_absoluteX="395dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="3"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/mapButton"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/MAP"
            android:textColor="#9E1B32"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/scanButton"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/SCAN"
            android:textColor="#9E1B32"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tourButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/TOUR"
            android:textColor="#9E1B32"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Alabama Stadium Tour"
            android:textColor="#9E1B32"
            android:textSize="24sp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>


