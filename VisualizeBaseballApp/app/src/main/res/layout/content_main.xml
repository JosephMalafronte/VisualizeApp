<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="3">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="none|textPersonName"
        android:text="Alabama Stadium Tour"
        android:textColor="#9E1B32"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:background="@android:color/white"
        tools:ignore="LabelFor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        tools:showIn="@layout/activity_main">

        <ImageView
            android:id="@+id/image1"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/border"
            android:contentDescription="@string/imageLeft"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bama"
            android:layout_width="0dp" />

        <ImageView
            android:id="@+id/image2"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/border"
            android:contentDescription="@string/imageCenter"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pic1"
            android:layout_width="0dp" />


        <ImageView
            android:id="@+id/image3"

            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/border"
            android:contentDescription="@string/imageRight"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/thrower"
            android:layout_width="0dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tourButton"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:text="@string/TOUR"
            android:textColor="#9E1B32"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="0dp" />

        <Button
            android:id="@+id/mapButton"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:text="@string/MAP"
            android:textColor="#9E1B32"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="0dp" />


        <Button
            android:id="@+id/scanButton"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:text="@string/SCAN"
            android:textColor="#9E1B32"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="0dp" />

    </LinearLayout>


</LinearLayout>


